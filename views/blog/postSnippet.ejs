<div class="post">


  <div>
   <span class="date">
     <%= (post.date.getMonth() + 1) + '.' + post.date.getDate() + '.' + post.date.getFullYear() %>
  </span>
  <h2><a href=<%= post.url %>><%= post.title %></a></h2>
  </div>
  <div class="post">
    <%- post.preview %>
  </div>

  <div class="tags">
    <% post.tags.forEach(function(tag){ %>
      <a href='<%= tagUrl(tag) %>'>
        <span class="label label-info"><%= tag %></span>
      </a>
    <% }) %>
  </div>

</div>
